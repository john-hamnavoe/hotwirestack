
<%= render Forms::PageComponent.new(title: t(".title"), model: @index_view) do %>
  <%= form_with(model: @index_view, data: {turbo_frame: "_top"}) do |form| %>
    <%= render "form_fields", form: form, index_view: @index_view %>
    <%= render Forms::FooterComponent.new(form, with_search_session_token(index_views_path(table_entity_id: @index_view.table_entity.id)), false) %>
  <% end %>
<% end %>
