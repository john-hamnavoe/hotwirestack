  <div class="fixed top-0 inset-x-0 m-4 z-30">
    <div class="flex flex-col items-end space-y-4">
      <!-- Alert that auto-dismisses-->
      <div data-controller="alert"
            data-alert-dismiss-after-value="2000"
            data-transition-enter="ease-in-out duration-500"
            data-transition-enter-from="translate-x-full opacity-0"
            data-transition-enter-to="translate-x-0 opacity-100"
            data-transition-leave="ease-in-out duration-500"
            data-transition-leave-from="translate-x-0 opacity-100"
            data-transition-leave-to="translate-x-full opacity-0"
            class="hidden max-w-md w-full shadow-lg rounded px-4 py-3 relative bg-<%= color %>-400 border-l-4 border-<%= color %>-600 text-white pointer-events-auto">
        <div class="p-2">
          <div class="flex items-start">
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm leading-5 font-medium">
              <%= message %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0 flex">
              <button data-action="alert#close" class="inline-flex text-white focus:outline-none focus:text-gray-300 transition ease-in-out duration-150" id="alert-close-button">
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- add so that purge css picks up -->
  <div class="hidden bg-red-400 border-red-600"></div>
  <div class="hidden bg-green-400 border-green-600"></div>
