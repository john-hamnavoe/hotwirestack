
<div class="group relative flex items-center -left-11 w-[calc(100%+45px)] h-2">
  <div class="relative w-10 opacity-0 transition-opacity duration-300 ease-linear group-hover:opacity-100" 
      data-controller="dropdown" 
      data-action="click@window->dropdown#hide touchstart@window->dropdown#hide keydown.up->dropdown#previousItem keydown.down->dropdown#nextItem keydown.esc->dropdown#hide",
      data-dropdown-position-target="container">
    <button type="button"  
            data-action="dropdown#toggle:stop dropdown-position#toggle"  
            data-dropdown-position-target="button"
            class="rounded-full bg-indigo-600 p-0.5 mt-2 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5">
              <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
            </svg>

    </button>        
    <div data-dropdown-target="menu" data-dropdown-position-target="menu" class="hidden absolute -left-full top-0 z-10 w-max max-w-md min-w-32 overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5" id="export-1">
      <%= button_to t("buttons.heading_1"), document_fragments_path(document, fragment: {element: "h1", data: "New Heading", position: position}, search_session_token: search_session_token), method: :post, class: "block no-underline  py-1 pl-3 pr-3 text-xl font-bold leading-7 text-gray-900 hover:bg-gray-50 w-full text-left"  %>
      <%= button_to t("buttons.heading_2"), document_fragments_path(document, fragment: {element: "h2", data: "New Sub Heading", position: position}, search_session_token: search_session_token), method: :post, class: "block no-underline  py-1 pl-3 pr-3 text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50 w-full text-left"  %>
      <%= button_to t("buttons.heading_3"), document_fragments_path(document, fragment: {element: "h3", data: "New Small Heading", position: position}, search_session_token: search_session_token), method: :post, class: "block no-underline  py-1 pl-3 pr-3 text-md font-medium leading-7 text-gray-900 hover:bg-gray-50 w-full text-left"  %>
      <%= button_to t("buttons.paragraph"), document_fragments_path(document, fragment: {element: "p", data: "New Paragraph", position: position}, search_session_token: search_session_token), method: :post, class: "block no-underline py-1 pl-3 pr-3 text-sm leading-7 text-gray-900 hover:bg-gray-50 w-full text-left"  %>
      <%= button_to t("buttons.code_block"), document_fragments_path(document, fragment: {element: "pre", data: "New Code Block", position: position}, search_session_token: search_session_token), method: :post, class: "block no-underline py-1 pl-3 pr-3 text-xs leading-7 text-gray-900 hover:bg-gray-50 w-full text-left"  %>
    </div>
  </div>
    

  <hr class="flex-1 border-t-2 border-gray-100 group-hover:border-indigo-600" />
</div>
