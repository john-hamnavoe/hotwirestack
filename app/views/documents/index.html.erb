<% content_for :title, "Documents" %>

<% frame = "documents_index" %>

<%= render Index::ContainerComponent.new do |c| %>
  <% c.with_header(title: t(".title"), action_text: t(".new_document"), action_path: new_document_path(search_session: @search_session[:token])) %>

  <% c.with_search_form(query: @query, frame: frame, search_field_predicate: :title_cont, placeholder: t(".search_placeholder"), search_session_token: @search_session[:token]) do |s| %>
    <% s.with_config_dropdowns(index_view: @index_view, refresh_frame: frame, refresh_path: documents_path(search_session: @search_session[:token]), search_session_token: @search_session[:token])  %>
  <% end %>

  <% c.with_table(frame: frame, items: @documents, query: @query, pagy: @pagy, index_view: @index_view, search_session_token: @search_session[:token]) %>
<% end %>

