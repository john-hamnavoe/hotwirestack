<%= form_with(model: document) do |form| %>
  <%= search_session_hidden_field(search_session_token) %>
  <%= render(Forms::FieldsContainerComponent.new) do  %>
    <%= render Forms::FieldComponent.new(form, :title, span: :third) do |field| %>
      <% field.with_input_text(autofocus: true) %>
    <% end %>    
  <% end %>     
  <%= render Forms::FooterComponent.new(form, documents_path(search_session: search_session_token))  %>
<% end %>
