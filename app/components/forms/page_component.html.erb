<div class="bg-white px-2 pt-2 2xl:px-8 <%= width %>">
  <% content_for :title do %>
    <%= title %>
  <% end %>
  <h1 class="text-lg sm:text-xl font-semibold text-gray-900 border-b-2 pb-2"><%= title %></h1>
  <% unless description.nil? %>
    <h2 class="text-xs text-gray-700 pt-2"><%= description %></h2>
  <% end %>
  <div class="py-4 ">
    <div class="max-w-2xl">
      <%= render Forms::ErrorMessageComponent.new(model) %>
    </div>

    <%= content %>
  </div>
</div>
