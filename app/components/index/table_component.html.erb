<%= turbo_frame_tag frame do %>
  <div class="mt-2 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <% columns.each do |column| %>
                <th scope="col" class="py-1.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0 <%= 'sr-only' if column[:sr_only] %>"><%= column[:header] %></th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% items.each do |item| %>
              <tr>
                <% columns.each do |column| %>
                  <% if column[:type] == :action %>
                    <td class="whitespace-nowrap py-1 pl-4 pr-3 text-sm text-gray-900 sm:pl-0 font-medium text-right">
                      <%= render_action(item, column[:action]) %>
                    </td>
                  <% else %>
                    <td class="whitespace-nowrap py-1 pl-4 pr-3 text-sm text-gray-900 sm:pl-0 <%= 'font-medium' if column[:primary] %>">
                      <%= column[:method].is_a?(Proc) ? column[:method].call(item) : item.public_send(column[:method]) %>
                    </td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= render Index::PagyComponent.new(id: "#{frame}-pagy", pagy: pagy) %>
<% end %>
