<div class="relative" data-controller="reload-dropdown" 
  data-reload-dropdown-frame-value="<%= dom_id(index_view) %>" 
  data-reload-dropdown-refresh-path-value="<%= refresh_path %>"
  data-reload-dropdown-refresh-frame-value="<%= refresh_frame %>"
  data-action="click@window->reload-dropdown#hide touchstart@window->reload-dropdown#hide keydown.up->reload-dropdown#previousItem keydown.down->reload-dropdown#nextItem keydown.esc->reload-dropdown#hide">
  <button data-reload-dropdown-target="button" data-action="reload-dropdown#toggle:stop" type="button" class="flex items-center gap-x-1 text-sm font-semibold leading-6 text-gray-900 rounded-md" aria-expanded="false">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 flex-none text-gray-600">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 4.5v15m6-15v15m-10.875 0h15.75c.621 0 1.125-.504 1.125-1.125V5.625c0-.621-.504-1.125-1.125-1.125H4.125C3.504 4.5 3 5.004 3 5.625v12.75c0 .621.504 1.125 1.125 1.125Z" />
    </svg>
  </button>
  <div data-reload-dropdown-target="menu" class="hidden absolute right-0 top-full z-10 mt-3 w-screen max-w-md overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5">
    <div class="p-4">
      <%= turbo_frame_tag dom_id(index_view), src: index_view_path(index_view) do %>
      <% end %>
    </div>
  </div>
</div>